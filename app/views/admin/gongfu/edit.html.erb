<div id="middle" xmlns="http://www.w3.org/1999/html">
  <%= form_tag("/admin/gongfu/#{@gongfu.id}", :method => 'put', :multipart => true) do %>
      <table class="tabinfo">
        <tr>
          <th style="width: 20%">名称：</th>
          <td>
            <%= @names_config[@gf_config[@gongfu.gf_type]["name"]] %>
          </td>
        </tr>
        <tr>
          <th style="width: 20%">等级：</th>
          <td>
            <%= text_field :gongfu, :level, :style => 'font-size:16pt;' %>
            <% if @gongfu.errors['level'] && @gongfu.errors['level'].length > 0 %>
                <span style="color: red;">功夫等级输入不合法,应为数字，不超过100。</span>
            <% end %>
          </td>
        </tr>
        <tr>
          <th style="width: 20%">经验：</th>
          <td>
            <%= text_field :gongfu, :experience, :style => 'font-size:16pt;' %>
            <% if @gongfu.errors['experience'] && @gongfu.errors['experience'].length > 0 %>
                <span style="color: red;">经验输入不合法,应为数字。</span>
            <% end %>
          </td>
        </tr>
        <tr>
          <th style="width: 20%">成长强度：</th>
          <td>
            <%= text_field :gongfu, :grow_strength, :style => 'font-size:16pt;' %>
            <% if @gongfu.errors['grow_strength'] && @gongfu.errors['grow_strength'].length > 0 %>
                <span style="color: red;">成长强度输入为浮点数或整数。</span>
            <% end %>
          </td>
        </tr>
        <tr>
          <th ><label for="d_type">更改弟子</label></th>
          <td>
            <% unless @gongfu.position == 0 %>
                <label for="d_type"> </label>
                <select id="d_type" name="gongfu[disciple]">
                  <% @disciple_list.keys.each() do |d| %>
                      <% if @gongfu.disciple_id == d %>
                          <option selected="selected" value=<%= "\"#{@disciple_list[d]}\"".html_safe %>>
                            <%= @disciple_list[d] %></option>
                      <% else %>
                          <option value=<%= "\"#{@disciple_list[d]}\"".html_safe %>>
                            <%= @disciple_list[d] %></option>
                      <% end %>
                  <% end %>
                </select>
            <% else %>
                <%= @gongfu_info[@gongfu.id.to_s][:disciple_name] %>
            <% end %>
          </td>
        </tr>
      </table>
      <input type="submit" value="更新功夫" class="btnsubmit"/>
  <% end %>
</div>
